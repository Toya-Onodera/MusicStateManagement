<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView_MusicState"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/choose_state" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/m"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_StopButton"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                app:srcCompat="@drawable/stop" />

            <ImageView
                android:id="@+id/imageView_StartButton"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                app:srcCompat="@drawable/start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="64dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_BackButton"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/imageView_PauseButton"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:srcCompat="@drawable/pause" />

            <ImageView
                android:id="@+id/imageView_NextButton"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/next" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>